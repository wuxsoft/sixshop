<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html:{class:'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.label :email, class:"sr-only" %>
  <%= f.email_field :email, autofocus: true ,class:'form-control',placeholder:true%>
  <%= f.label :password, class:"sr-only" %>
  <%= f.password_field :password, autocomplete: "off", class:'form-control form-control-last', placeholder:true%>
  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <%= f.submit "Log in" ,class:'btn btn-lg btn-primary btn-block' %>
  <%= render "devise/shared/links" %>
<% end %>

