<h2></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:'form-signin'}) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Please Sign up</h2>
  <%= f.label :email ,class:'sr-only' %>
  <%= f.email_field :email, autofocus: true,placeholder:true, class:'form-control' %>

  <%= f.label :password,class:'sr-only' %>
  <%= f.password_field :password, autocomplete: "off",placeholder:true , class:'form-control form-control-multi'%>
  <%= f.label :password_confirmation,class:'sr-only' %>
  <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:true, class:'form-control form-control-last' %>
  <%= f.submit "Sign up" ,class:'btn btn-lg btn-primary btn-block' %>
  <%= render "devise/shared/links" %>
<% end %>

